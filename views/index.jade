extends layout

block content
  h1 Photoblog
  div(ng-app='blog')
    div(ng-controller='AppController')
      header(ng-show='user')
        a(href='/') Home
        br
        a(href='/admin' ng-show='user.isAdmin') Admin page
        br
        a(href='/user/{{ user.username }}') Profile
        br
        a(href='/user') Find user
        br
        a(href='/logout') Logout
      header(ng-hide='user')
        a(href='/') Home
        br
        a(href='/login') Login
        br
        a(href='/register') Register
      hr

      ng-view
