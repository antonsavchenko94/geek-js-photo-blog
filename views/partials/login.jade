div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
  div.panel.panel-info
    div.panel-heading
      h1.panel-title Login
    div.panel-body
      flash-message

      form(role="form")
        div.form-group
          label(for="username") Username:
          div.input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(type="text" ng-model="vm.newUser.username" id="username" placeholder="Enter username")

        div.form-group
          label(for="password") Password:
          div.input-group
            span.input-group-addon
              i.glyphicon.glyphicon-lock
            input.form-control(type="password" ng-model="vm.newUser.password" id="password" placeholder="Password")

        button.btn.btn-success(ng-click="vm.login()") Login
