div(ng-if="vm.token")
  div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    div.panel.panel-info
      div.panel-heading
        h1.panel-title Register
      div.panel-body
        flash-message
        form(role="form")
          div.form-group
            label(for="first_name") First name:
            div.input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(type="text" ng-model="vm.newUser.first_name" id="first_name" placeholder="First name")
          div.form-group
            label(for="last_name") Last name:
            div.input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(type="text" ng-model="vm.newUser.last_name" id="last_name" placeholder="Last name")
          div.form-group
            label(for="email") Email:
            div.input-group
              span.input-group-addon
                i.glyphicon.glyphicon-envelope
              input.form-control(type="email" ng-model="vm.newUser.email" id="email" placeholder="Email")
          div.form-group
            label(for="username") Username:
            div.input-group
              span.input-group-addon
                i.glyphicon.glyphicon-user
              input.form-control(type="text" ng-model="vm.newUser.username" id="username" placeholder="Username")
          div.form-group
            label(for="password") Password:
            div.input-group
              span.input-group-addon
                i.glyphicon.glyphicon-lock
              input.form-control(type="password" ng-model="vm.newUser.password" id="password" placeholder="Password")
          button.btn.btn-success(ng-click="vm.register()") Register

div(ng-if="!vm.token")
  span Email:
  input(type="email" ng-model="vm.newUser.email")
  button(ng-click="vm.sendToken()") Confirm